rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the document belongs to the requesting user
    function isOwner(resource) {
      return resource.data.ownerId == request.auth.uid;
    }

    // Helper function to check if the new data being written belongs to the requesting user
    function assigningOwner() {
      return request.resource.data.ownerId == request.auth.uid;
    }

    // Default rule: Deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // ACCOUNTS
    match /accounts/{accountId} {
      allow read: if isAuthenticated() && isOwner(resource);
      allow create: if isAuthenticated() && assigningOwner();
      allow update: if isAuthenticated() && isOwner(resource) && assigningOwner();
      allow delete: if isAuthenticated() && isOwner(resource);
    }

    // TRANSACTIONS
    match /transactions/{transactionId} {
      allow read: if isAuthenticated() && isOwner(resource);
      allow create: if isAuthenticated() && assigningOwner();
      allow update: if isAuthenticated() && isOwner(resource) && assigningOwner();
      allow delete: if isAuthenticated() && isOwner(resource);
    }

    // CATEGORIES
    match /categories/{categoryId} {
      allow read: if isAuthenticated() && isOwner(resource);
      allow create: if isAuthenticated() && assigningOwner();
      allow update: if isAuthenticated() && isOwner(resource) && assigningOwner();
      allow delete: if isAuthenticated() && isOwner(resource);
    }

    // SAVINGS
    match /savings/{savingsId} {
      allow read: if isAuthenticated() && isOwner(resource);
      allow create: if isAuthenticated() && assigningOwner();
      allow update: if isAuthenticated() && isOwner(resource) && assigningOwner();
      allow delete: if isAuthenticated() && isOwner(resource);
    }

    // SNAPSHOTS (Net Worth)
    match /snapshots/{snapshotId} {
      allow read: if isAuthenticated() && isOwner(resource);
      allow create: if isAuthenticated() && assigningOwner();
      allow update: if isAuthenticated() && isOwner(resource) && assigningOwner();
      allow delete: if isAuthenticated() && isOwner(resource);
    }

    // USER SETTINGS / PROFILE (If needed)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
